{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }} {{ car.model.name }} {# parent() will display the title from base view "AutoTrader" #}
{% endblock %}

{% block body %}
	<h1><b>{{ car.make.name }} {{ car.model.name }}</b></h1>
	<b>Specs</b>
	<table class="table">
		<tr>
			<td>Navigation</td>
			<td>{% if car.navigation %}
					<span class="glyphicon glyphicon-ok"></span>
				{% else %}
					<span class="glyphicon glyphicon-remove"></span>
				{% endif %}</td>
		</tr>
		<tr>
			<td>Year</td>
			<td>{{ car.year }}</td>
		</tr>
		<tr><td>Price</td><td>{{ car.price }}</td></tr>
	</table>
	<p>{{ car.description }}</p>
	<a href="{{ url('offer') }}">Back</a>
{% endblock %}